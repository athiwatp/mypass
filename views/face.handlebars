<!-- HEADLINE -->
<div class="headline-wrap">
	{{#if isSignup}}
	<p class="eyebrow">Step 2: Face Recognition Setup</p>
	<h2 class="authtype headline">Ready for your close-up!</h2>
	<div class="list-wrap bounds instructions">
		<ol class="subheadline">
			<li>Start by taking a snapshot.</li>
			<li>Press the check to confirm if you are happy with the photo. If not, you can retake as many as you like </li>
		</ol>
	</div>


	{{else}}
	<p class="eyebrow">Face Authentication</p>
	<h2 class="headline">Login with Your Face</h2>
	<p class="subheadline">
		We never forget a face!
	</p>
	<p class="fineprint">Don't have an account?
		<a href="/signup/text"> Sign up here. </a>
	</p>
	{{/if}}
</div>

<div id="upload_status" class="center-block"></div>
<div id="upload_result" class="center-block"></div>

<div class="row">

	<form id="main-form" role="form" action="/api/face/{{api_phase}}" enctype="multipart/form-data" method="POST" class="col s12 m12"
	 style="max-width:30%;margin-left:35%">

		<input id="csrf" type="hidden" name="_csrf" value="{{csrf}}"> {{#if isSignup}}

		<input id="username" type="hidden" name="username" autocomplete="off" value="{{username}}" disabled> {{else}}


		<div class="input-field row">

			<input id="username" type="text" name="username" autocomplete="off" value="{{username}}">
			<label for="username">username</label>
		</div>


		{{/if}}
	</form>


	<!-- FOR LOGIN/SIGNUP, THERE IS NO NEED TO UPLOAD A PHOTO, AND PRESS SUBMIT BUTTON -->
